@model List<Model.EntityFramework.Content>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="layoutSidenav">
    <div id="layoutSidenav_content">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                DataTable Example
            </div>
            <div style="margin:15px 0 0 20px">
                @Html.ActionLink("Add New Content", "Create", "Content", new { @class = "btn btn-primary" })
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Warranty</th>
                            <th>CreatedDate</th>
                            <th>ModifiedDate</th>
                            <th>MetaKeywords</th>
                            <th>ViewCount</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tblUser">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Image</td>
                                <td>@item.Warranty</td>
                                <td>@item.CreatedDate</td>
                                <td>@item.ModifiedDate</td>
                                <td>@item.MetaKeywords</td>
                                <td>@item.ViewCount</td>
                                <td>@item.Status</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", "Content", new { id = item.ID }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Delete", "Delete", "Content", new { id = item.ID }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





