
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var newPro = (List<Model.EntityFramework.Product>)ViewBag.NewProduct;
    var featuredPro = (List<Model.EntityFramework.Product>)ViewBag.FeaturedProduct;
}

@section slide {

    <div class="header_slide">
        @{ Html.RenderAction("ProductCategory", "Home");}
        @{ Html.RenderAction("Slide", "Home");}
        <div class="clear"></div>
    </div>
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Sản phẩm mới</h3>
        </div>
        <div class="see">
            <p><a href="/san-pham">Xem tất cả</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in newPro)
        {
            <div class="grid_1_of_4 images_1_of_4">
                <a href="/chi-tiet/@item.MetaTitle-@item.ID"><img src="~/Assets/Client/images/@item.Image" alt="@item.Name" /></a>
                <h2>@item.Name</h2>
                <div class="price-details">
                    <div class="price-number" >
                        <p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ nhân viên!") VND</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="#">Thêm vào giỏ hàng</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }

    </div>
    <div class="content_bottom">
        <div class="heading">
            <h3>Sản phẩm hot</h3>
        </div>
        <div class="see">
            <p><a href="#">Xem tất cả</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var item in featuredPro)
        {
            <div class="grid_1_of_4 images_1_of_4">
                <a href="/chi-tiet/@item.MetaTitle-@item.ID"><img src="~/Assets/Client/images/@item.Image" alt="" /></a>
                <h2>@item.Name</h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ nhân viên!")  VND</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="#">Thêm vào giỏ hàng</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }
    </div>
</div>

