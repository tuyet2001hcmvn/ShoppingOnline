
@{
    ViewBag.Title = "CategoryItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cateName = ViewBag.CateName;
}

<div class="content_top">
    <div class="heading">
        <h3>@cateName</h3>
    </div>
    <div class="clear"></div>
</div>
<div class="content">
    <div class="section group">
        @foreach (var item in Model)
        {
            <div class="grid_1_of_4 images_1_of_4">
                <a href="/chi-tiet/@item.MetaTitle-@item.ID"><img src="~/Assets/Client/images/@item.Image" alt="@item.Name" /></a>
                <h2>@item.Name</h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@item.Price VND</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="#">Thêm vào giỏ hàng</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }

    </div>
</div>
